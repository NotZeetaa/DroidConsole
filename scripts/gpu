    read input
    case $input in
        1)
            sed -i '/^GPU_POWER_MANAGEMENT=/c\GPU_POWER_MANAGEMENT="1"' $CONFIG
            finish
            ;;
        2)
            sed -i '/^GPU_POWER_MANAGEMENT=/c\GPU_POWER_MANAGEMENT="0"' $CONFIG
            finish
            ;;
        3)
            gpu
            ;;
        4)
            main
            ;;
        5)
            leave
            ;;
        *)
            red
            echo "Invalid input!"
            reset
            ;;
