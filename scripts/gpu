}

gpu() {
    clear
    red
    animation_title
    echo "*****************************"
    animation_title
    echo "      × GPU Tweaks ×      "
    animation_title
    echo "*****************************"
    green
    space
    animation
    echo "1 - GPU Throttling"
    animation
    echo "2 - GPU power level"
    animation
    echo "3 - GPU power management optimization"
    animation
    echo "4 - Main"
    animation
    echo "5 - Exit"
    reset
    space
    echo "Your input: "
    read input
    case $input in
        1)
            gpu_throttling
            ;;
        2)
            gpu_power_level
            ;;
        3)
            gpu_power_management
            ;;
        4)
            main
            ;;
        5)
            leave
            ;;
        *)
            red
            echo "Invalid input!"
            reset
            ;;
    esac
}

# Call the main function
gpu
