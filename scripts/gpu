#!/system/bin/sh

# Call variables script
. /data/adb/modules/DroidConsole/system/bin/variables

gpu_throttling() {
    clear
    red
    animation_title
    echo "********************************"
    animation_title
    echo "      × GPU Throttling ×      "
    animation_title
    echo "********************************"
    green
    space
    animation
    echo "1 - Turn off throttling"
    red
    space
    animation
    echo "* NOTE * Turning off gpu throttling can lead to heat and maybe more dangeours situations * NOTE *"
    green
    space
    animation
    echo "2 - Turn on throttling"
    animation
    echo "3 - Go back"
    animation
    echo "4 - Main"
    animation
    echo "5 - Exit"
    reset
    space
    echo "Your input: "
    read input
    case $input in
        1)
            sed -i '/^GPU_THROTTLING=/c\GPU_THROTTLING="0"' $CONFIG
            finish
            ;;
        2)
            sed -i '/^GPU_THROTTLING=/c\GPU_THROTTLING="1"' $CONFIG
            finish
            ;;
        3)
            gpu
            ;;
        4)
            main
            ;;
        5)
            leave
            ;;
        *)
            red
            echo "Invalid input!"
            reset
            ;;
    esac
}

gpu_power_level() {
    clear
    red
    animation_title
    echo "********************************"
    animation_title
    echo "      × GPU power level ×      "
    animation_title
    echo "********************************"
    green
    space
    animation
    echo "1 - Set max GPU power level"
    animation
    echo "2 - Set min GPU power level"
    animation
    echo "3 - Go back"
    animation
    echo "4 - Main"
    animation
    echo "5 - Exit"
    reset
    space
    echo "Your input: "
    read input
    case $input in
        1)
            sed -i '/^GPU_POWER_LEVEL=/c\GPU_POWER_LEVEL="1"' $CONFIG
            finish
            ;;
        2)
            sed -i '/^GPU_POWER_LEVEL=/c\GPU_POWER_LEVEL="0"' $CONFIG
            finish
            ;;
        3)
            gpu
            ;;
        4)
            main
            ;;
        5)
            leave
            ;;
        *)
            red
            echo "Invalid input!"
            reset
            ;;
    esac
}

