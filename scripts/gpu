    clear
    red
    animation_title
    echo "*************************************************"
    animation_title
    echo "      × GPU Power Management Optimization ×      "
    animation_title
    echo "*************************************************"
    green
    space
    animation
    echo "1 - Optimize for performance (This may increase power usage)"
    animation
    echo "2 - Optimize for battery"
    animation
    echo "3 - Go back"
    animation
